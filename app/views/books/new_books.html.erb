<nav class="bg-gray-800 h-[100px] shadow">
<%= link_to root_path do %>
  <%= image_tag("home.png", alt: "Show Cart", class: "w-[50px] h-[50px] absolute top-2 left-2") %>
<% end %>
          <%= link_to "About", about_path, class: "text-gray-300 px-3 py-2 rounded-md text-[20px] font-[20px]  absolute top-3 left-[60px]" %>
          <%= link_to "Contact", contact_path, class: "text-gray-300 px-3 py-2 rounded-md text-[20px] font-[20px] absolute top-3 left-[130px]" %>
          <%= link_to "Shop", books_path, class: "text-gray-300 px-3 py-2 rounded-md text-[20px] font-[20px] absolute top-3 left-[220px]" %>
          <%= link_to "Cart", show_cart_path, class: "text-gray-300 px-3 py-2 rounded-md text-[20px] font-[20px] absolute top-3 left-[290px]" %>
</nav>

<h2 class="text-2xl font-bold mb-4">New Books</h2>
<div class="grid gap-4 lg:grid-cols-3">
<div class="absolute top-10">
 <%= paginate @new_books %>
 </div>
  <% @new_books.each do |book| %>
    <div class="bg-white rounded-lg shadow-md p-4">
      <h3 class="text-xl font-semibold mb-2"><%= book.book_name %></h3>
      <p class="text-gray-700 mb-4"><%= book.book_desc %></p>
      <p class="text-gray-600 mb-2">Genre: <%= book.book_genre %></p>
          <%= link_to "View Details", book_path(book), class: "text-blue-500 hover:underline" %>
          <%= form_tag(add_to_cart_path(book.id), method: "post", class: "add-to-cart-form") do %>
            <%= hidden_field_tag :book_id, book.id %>
            <%= submit_tag "Add to Cart", class: "add-to-cart-button" %>
          <% end %>
          <% if @cart.key?(book.id) %>
            <%= link_to "Remove", remove_from_cart_path(book.id), method: :post %>
          <% end %>
    </div>
  <% end %>
</div>
