<%= link_to root_path do %>
  <%= image_tag("home.png", alt: "Show Cart", class: "w-[50px] h-[50px] absolute top-2 left-2") %>
<% end %>

<div class="container mx-auto py-8">
  <h1 class="text-3xl font-bold mb-6">Shopping Cart</h1>

  <% if @cart.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @cart.each do |book_id, quantity| %>
        <% book = Book.find(book_id) %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold mb-2"><%= book.book_name %></h2>
          <p class="text-gray-700 mb-2"><%= book.book_desc %></p>
          <p class="text-gray-600">Quantity: <%= quantity %></p>
          
          <div class="flex justify-between mt-4">
            <div class="flex">
              <%= form_tag increase_quantity_path(book_id), method: :post do %>
                <%= button_tag "+", class: "bg-blue-500 text-white px-2 py-1 rounded" %>
              <% end %>
              
              <%= form_tag decrease_quantity_path(book_id), method: :post do %>
                <%= button_tag "-", class: "bg-red-500 text-white px-2 py-1 rounded ml-2" %>
              <% end %>
            </div>
            
         <%= link_to "Remove", remove_item_from_cart_path(book_id), method: :post, data: { confirm: 'Are you sure you want to remove this item from your cart?' }, class: "text-red-500 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Your shopping cart is empty.</p>
  <% end %>
</div>
